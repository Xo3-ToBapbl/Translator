<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Translator.Pages.MasterPages.MainPageMaster"
             xmlns:local="clr-namespace:Translator.ViewModels;assembly=Translator"
             Title="Main Page"
             BackgroundColor="{StaticResource ColorBackgroundDark}">
    
    <ContentPage.BindingContext>
        <local:MasterViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="MasterPageButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource ColorBackgroundLight}"></Setter>
                <Setter Property="HorizontalOptions" Value="Fill"></Setter>
                <Setter Property="HeightRequest" Value="200"></Setter>
                <Setter Property="Text" Value="Добавить"></Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout HorizontalOptions="Fill"
                 Spacing="1">

        <Button HorizontalOptions="Fill"
                HeightRequest="200"
                Text="Добавить"/>

    </StackLayout>

