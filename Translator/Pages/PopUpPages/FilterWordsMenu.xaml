<?xml version="1.0" encoding="utf-8" ?>
<Pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:Pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
                 xmlns:localEnums="clr-namespace:Translator.Enums"
                 xmlns:Extensions="clr-namespace:Translator.Extensions"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 x:Class="Translator.Pages.PopUpPages.FilterWordsMenu"
                 BackgroundColor="Transparent">

    <Pages:PopupPage.Resources>
        <ResourceDictionary>

            <Style x:Key="FilterMenuButton" TargetType="Button" BasedOn="{StaticResource MenuButton}">
                <Setter Property="Command" Value="{Binding SortWordsCommand}"></Setter>
            </Style>

        </ResourceDictionary>
    </Pages:PopupPage.Resources>

    <StackLayout VerticalOptions="Start"
                 HorizontalOptions="End"
                 WidthRequest="200"
                 Spacing="1"
                 BackgroundColor="{StaticResource ColorBackgroundDark}">

        <Label Text="{Extensions:Localization LabelSortWordsText}"
               Style="{StaticResource MenuLabel}"/>

        <Button Text="{Extensions:Localization ButtonAZText}"
                Style="{StaticResource Key=FilterMenuButton}"
                CommandParameter="{x:Static localEnums:WordsFilterTypes.Alphabetical}"/>

        <Button Text="{Extensions:Localization ButtonZAText}"
                Style="{StaticResource Key=FilterMenuButton}"
                CommandParameter="{x:Static localEnums:WordsFilterTypes.AlphabeticalDescending}"/>

        <Button Text="{Extensions:Localization ButtonNewOldText}"
                Style="{StaticResource Key=FilterMenuButton}"
                CommandParameter="{x:Static localEnums:WordsFilterTypes.Date}"/>

        <Button Text="{Extensions:Localization ButtonOldNewText}"
                Style="{StaticResource Key=FilterMenuButton}"
                CommandParameter="{x:Static localEnums:WordsFilterTypes.DateDescending}"/>

    </StackLayout>

</Pages:PopupPage>